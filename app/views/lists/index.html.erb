
<div class="row row-cols-1 row-cols-md-3 g-4 m-5">
  <% @lists.each do |list| %>
    <div class="col">
      <div class="card shadow-sm custom-card" style="height:200px; background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.image.key, height: 300, crop: :fill %>')">
        <div class="card-body d-flex flex-column justify-content-center align-items-center">
          <h4 class="card-title text-center">
            <%= link_to list.name, list_path(list), class: "text-decoration-none text-white shadow-text" %>
          </h4>
        </div>
      </div>
    </div>
  <% end %>
</div>





<div class="d-flex justify-content-center my-4">
  <%= link_to "+ create a movie list", new_list_path, class: "btn btn-primary" %>
</div>
